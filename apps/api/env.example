# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/prontoplus?connection_limit=10&pool_timeout=10"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Application Configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL="http://localhost:3000"

# Logging Configuration
LOG_LEVEL=debug

# ConfigCat Feature Flags
# Get your SDK key from: https://app.configcat.com
CONFIGCAT_SDK_KEY=your_configcat_sdk_key_here

# Telnyx AI Assistant Integration
# Get your API key from: https://portal.telnyx.com/#/app/api-keys
TELNYX_API_KEY=KEY_your_telnyx_api_key_here
TELNYX_API_V2_KEY=your_telnyx_v2_key_here
TELNYX_PHONE_NUMBER=+1234567890
TELNYX_WEBHOOK_SECRET=your_webhook_secret_here
TELNYX_CALL_CONTROL_APP_ID=your_call_control_app_id_here
NEXT_PUBLIC_DEMO_PHONE_NUMBER=+1 (555) 123-4567

# Slack Notifications (Optional)
# Create webhook at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Testing Configuration
# Pronto Demo phone number (Telnyx number with AI assistant configured)
PRONTO_DEMO_PHONE_NUMBER=+15551234567

# Twilio Configuration (for test calls)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# OpenAI Configuration (for transcription and evaluation)
OPENAI_API_KEY=sk-xxxxxxxxxxxxx

# Test execution settings
TEST_CALL_DELAY_SECONDS=45