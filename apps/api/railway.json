{
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/api && pnpm prisma:generate && pnpm build"
  },
  "deploy": {
    "startCommand": "cd apps/api && pnpm start:prod",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "environments": {
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "4000"
      }
    },
    "preview": {
      "variables": {
        "NODE_ENV": "development",
        "PORT": "4000"
      }
    }
  }
}
