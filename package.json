{
  "name": "prontoplus",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "start": "node -e \"process.env.RAILWAY_SERVICE_NAME === 'frontend' ? require('child_process').execSync('cd apps/frontend && pnpm start', {stdio: 'inherit'}) : require('child_process').execSync('cd apps/api && pnpm start:prod', {stdio: 'inherit'})\"",
    "start:api": "cd apps/api && pnpm start:prod",
    "start:frontend": "cd apps/frontend && pnpm start",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "prettier": "^3.4.0",
    "husky": "^9.1.0",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.1.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
